<p id="notice"><%= notice %></p>

<% if model_signed_in? %>
  <li>
    <%= link_to 'Log Out', destroy_model_session_path, method: :delete %> 
  </li>
<% else %>
  <li>
    <%= link_to 'Register', new_model_registration_path %> 
  </li>
<% end %>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.description %></td>
        <td><%= document.content %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= will_paginate @documents %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
